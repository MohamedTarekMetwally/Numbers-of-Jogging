<p style="color: green"><%= notice %></p>

<table class="table table-striped table-bordered">
  <thead class="thead-dark">
    <tr>
      <th>Date</th>
      <th>Distance</th>
      <th>Time</th>
    </tr>
  </thead>

  <tbody>
      <% @joggings.each do |jogging| %>
      <tr>
        <td><%=jogging.date%></td>
        <td><%=jogging.distance%></td>
        <td><%=jogging.time%></td>
          <td><%= link_to 'Delete', jogging, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-outline-danger btn-sm" %></td> 
          <td><%= link_to "Show this jogging", jogging %></td>
      </tr>
      <% end %> 
    
  </tbody>
</table>



<%= link_to "New jogging", new_jogging_path,class:"btn btn-secondary" %>
